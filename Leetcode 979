class Solution:
    def distributeCoins(self, root: TreeNode) -> int:
        self.res = 0
        def helper(root):
            if not root:
                return 0
            
            l = helper(root.left)
            r = helper(root.right)
            
            self.res += abs(l) + abs(r)
            
            return l + r + root.val - 1
        
        helper(root)
        return self.res
